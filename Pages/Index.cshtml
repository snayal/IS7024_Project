@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var properties = (PropertyQuickType.Property[])ViewData["Property"];
    //var healthcares = (QuickType1.Healthcare[])ViewData["Healthcare"];
}

<main role="main">
    

    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/neighborhood1.jpg" class="d-block w-100" alt="Home" width="500" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="text-center">Residential Property</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/office3.jpg" class="d-block w-100" alt="Office" width="500" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="text-center">Office Property </h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/healthcare.jpg" class="d-block w-100" alt="Healthcare" width="500" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="text-center">Healthcare Property</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/hotel10.jpeg" class="d-block w-100" alt="Hotel" width="400" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="text-center">Hotel Property</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/retailproperty.jpeg" class="d-block w-100" alt="Hotel" width="400" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="text-center">Retail Property</h5>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <hr /><br />
    <div class="container boxdefinition">
        <div class="row">
            <div class="col-md-5 order-md-2">
                <h2 class="featurette-heading" style="color:crimson"><br />Search Property</h2>
                <form name="search" method="get" action="https://data.cincinnati-oh.gov/resource/m76i-p5p9.json?zip_code">
                    <label for="Property"></label>
                    <input type="text" value="Zipcode" name="zip_code" style="background-color:aqua">
                    <input type="submit" value="Submit" style="background-color:gold">
                </form><br />
                <form name="search" method="get" action="https://data.cincinnati-oh.gov/resource/m76i-p5p9.json?project_type">
                    <label> </label>
                    <input type="text" value="Property Type" name="project_type" style="background-color:aqua" >
                    <input type="submit" value="Submit" style="background-color:gold">
                </form><br />
                <form name="search" method="get" action="https://data.cincinnati-oh.gov/resource/m76i-p5p9.json?neighborhood">
                    <label for="Property"></label>
                    <input type="text" value="Neighborhood" name="neighborhood"  style="background-color:aqua">
                    <input type="submit" value="Submit" style="background-color:gold">
                </form>
                
            </div>
            <br /> 
            <div class="col-md-7 order-md-1">
                <img class="featurette-image img-fluid mx-auto" src="~/images/Property-Type-Image.jpg" alt="house" width="500" height="250">
            </div>
        </div>
        <br />
        <div class="row"  style="text-align:center">
            <div class="col-md-7"  text-align: center>
                <h2 class="featurette-heading" style="color:crimson" ; text-align: center><br /><br />Search Crime Reported</h2>
                <form name="search" method="get" action="https://data.cincinnati-oh.gov/resource/k59e-2pvf.json?zip"  text-align: center>
                    <label for="CrimeReported"></label>
                    <input type="text" value="ZipCode" name="zip"  style="background-color:aqua">
                    <input type="submit" value="Submit" style="background-color:gold">
                </form>
            </div>

            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto" src="~/images/safeNeighborhood.jpg" alt="house" width="500" height="250">
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-5 order-2">
                <h3 class="featurette-heading" style="color:crimson" text-align: center><br /><br />Search Healthcare </h3>
                <form name="search" method="get" action="https://data.cincinnati-oh.gov/resource/v8yh-wpss.json?zipcode">
                    <label for="Healthcare"></label>
                    <input type="text" value="ZipCode" name="zipcode" style="background-color:aqua">
                    <input type="submit" value="Submit" style="background-color:gold">
                </form>
            </div>

            <div class="col-md-7 order-1">
                <img class="featurette-image img-fluid mx-auto" src="/images/hospital2.jpeg" alt="home" width="500" height="250">
            </div>
        </div>
    </div>
</main>
<hr />
